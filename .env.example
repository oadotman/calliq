# CallIQ Environment Configuration
# =====================================================
# Phase 5.2 - Centralized Configuration
# Copy this file to .env.local and fill in your values
# =====================================================

# Application Settings
NEXT_PUBLIC_APP_NAME=CallIQ
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
API_VERSION=v1
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database (Supabase) - REQUIRED
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-key

# External Services - REQUIRED
ASSEMBLYAI_API_KEY=your-assemblyai-api-key
ASSEMBLYAI_WEBHOOK_URL=https://your-app.com/api/webhooks/assemblyai
ASSEMBLYAI_WEBHOOK_SECRET=your-webhook-secret
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Queue Management (Bull Queue with Redis) - OPTIONAL but recommended
# Note: The app works without Redis but will process calls synchronously
# For production, use Redis for better performance and reliability

# Paddle Payment Processing
PADDLE_VENDOR_ID=your-vendor-id
PADDLE_API_KEY=your-api-key
PADDLE_CLIENT_TOKEN=your-client-token
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=your-client-token
PADDLE_WEBHOOK_SECRET=your-webhook-secret
NEXT_PUBLIC_PADDLE_ENVIRONMENT=sandbox
NEXT_PUBLIC_PADDLE_PRICE_ID_STARTER=your-starter-price-id
NEXT_PUBLIC_PADDLE_PRICE_ID_GROWTH=your-growth-price-id
NEXT_PUBLIC_PADDLE_PRICE_ID_ENTERPRISE=your-enterprise-price-id

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@calliq.com
RESEND_REPLY_TO=support@calliq.com

# Upload Configuration
MAX_FILE_SIZE=524288000
UPLOAD_TIMEOUT=300000
MAX_CONCURRENT_UPLOADS=3

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
UPLOAD_RATE_LIMIT=10

# Processing
MAX_PROCESSING_RETRIES=3
RETRY_DELAY_MS=5000
PROCESSING_TIMEOUT=600000

# Usage Quotas (minutes)
FREE_PLAN_MINUTES=30
SOLO_PLAN_MINUTES=500
TEAM_PLAN_MINUTES=2000
ENTERPRISE_PLAN_MINUTES=10000
OVERAGE_RATE_CENTS=10

# Security
SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8

# GDPR & Data Retention
RETENTION_DAYS_FREE=30
RETENTION_DAYS_PAID=365
RETENTION_DAYS_ENTERPRISE=730

# Feature Flags
FEATURE_PARTNER_PROGRAM=true
FEATURE_REFERRALS=true
FEATURE_GDPR=true
FEATURE_AUTO_APPROVAL=true

# Cron Jobs
CRON_SECRET=your-secure-cron-secret-change-this

# Redis Cache (Optional but recommended for production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Security Secrets (REQUIRED for production)
SESSION_SECRET=generate-minimum-32-character-random-string
CSRF_SECRET=generate-minimum-32-character-random-string

# Monitoring & Analytics (Optional but recommended)
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_RELEASE=your-release-version
NEXT_PUBLIC_SENTRY_RELEASE=your-release-version

# PostHog Analytics (Optional)
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Debug Mode (Set to false in production)
NEXT_PUBLIC_DEBUG_MODE=false
DISABLE_AUTH=false